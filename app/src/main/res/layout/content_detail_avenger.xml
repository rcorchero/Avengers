<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail_avenger">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textRealName"
            style="@style/TextView.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Peter Parker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textHeight"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_ruler"
            android:drawableTint="@color/white"
            android:drawablePadding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textRealName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="1.77m"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textAbilities"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_medal"
            android:drawableTint="@color/white"
            android:drawablePadding="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Peter is an accomplished scientist, inventor and photographer."/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textPowers"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_karate"
            android:drawableTint="@color/white"
            android:drawablePadding="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textAbilities"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Peter can cling to most surfaces, has superhuman strength (able to lift 10 tons optimally) and is roughly 15 times more agile than a regular human."/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textGroups"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_account_group_outline"
            android:drawableTint="@color/white"
            android:drawablePadding="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textPowers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Avengers, formerly the Secret Defenders, New Fantastic Four, the Outlaws"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
